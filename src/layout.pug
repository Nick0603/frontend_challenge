//- layout.pug
html
  head
    title FrontEnd Challenge - #{title}
    link(href="layout.css", rel="stylesheet")
    link(href="https://use.fontawesome.com/releases/v5.3.1/css/all.css", rel="stylesheet")
    
    block scripts
    
  body
    header#header.wrap-header
      nav
        ul
          li.brand
            img(src="../images/logo-all-dark.svg", alt="logo-all-dark.svg")
          li.menu
            ul
              li.link
                a(href="/index.html", title="title").class 首頁
              li.link
                a(href="/sweet.html", title="title").class 甜點
              li.link
                a(href="/index.html", title="title").class 登入
          li.cart
            i.fas.fa-shopping-cart
    main.main
      block content
    footer#footer.wrap-footer
      section.subscribe
        img.subscribe-brand(src="../images/logo-light.svg", alt="logo-light.svg")
        p.subscribe-content 訂閱你我的甜蜜郵件
        input.subscribe-input(type="text")
      section.contact